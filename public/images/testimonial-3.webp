<svg width="300" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="testimonial3Grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00e3a2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#9be15d;stop-opacity:1" />
    </linearGradient>
    <filter id="testimonialShadow3">
      <feDropShadow dx="0" dy="6" stdDeviation="12" flood-color="#00000030"/>
    </filter>
  </defs>
  
  <!-- Card background -->
  <rect width="100%" height="100%" fill="rgba(255,255,255,0.95)" rx="16" stroke="rgba(0,0,0,0.1)" stroke-width="1" filter="url(#testimonialShadow3)"/>
  
  <!-- Quote icon -->
  <circle cx="30" cy="30" r="15" fill="url(#testimonial3Grad)"/>
  <text x="30" y="37" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="white" text-anchor="middle">"</text>
  
  <!-- Testimonial text -->
  <text x="60" y="40" font-family="Arial, sans-serif" font-size="12" font-weight="600" fill="#333">App perfecta!</text>
  <text x="20" y="60" font-family="Arial, sans-serif" font-size="11" fill="#666">La app web funciona</text>
  <text x="20" y="75" font-family="Arial, sans-serif" font-size="11" fill="#666">perfectamente. Stripe</text>
  <text x="20" y="90" font-family="Arial, sans-serif" font-size="11" fill="#666">integrado sin problemas.</text>
  
  <!-- Client info -->
  <rect x="20" y="120" width="40" height="40" fill="url(#testimonial3Grad)" rx="20"/>
  <text x="40" y="135" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white" text-anchor="middle">A</text>
  
  <text x="80" y="135" font-family="Arial, sans-serif" font-size="12" font-weight="600" fill="#333">Ana Martínez</text>
  <text x="80" y="150" font-family="Arial, sans-serif" font-size="10" fill="#666">Fundadora, E-commercePlus</text>
  
  <!-- Rating -->
  <text x="20" y="180" font-family="Arial, sans-serif" font-size="12" fill="#ffa500">★★★★★</text>
  <text x="80" y="180" font-family="Arial, sans-serif" font-size="10" fill="#666">5.0/5.0</text>
</svg>

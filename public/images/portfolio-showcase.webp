<svg width="600" height="400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="showcaseGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00E5FF;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#7C4DFF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E91E63;stop-opacity:1" />
    </linearGradient>
    <filter id="showcaseShadow">
      <feDropShadow dx="0" dy="12" stdDeviation="24" flood-color="#00000050"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#showcaseGrad)" rx="20"/>
  
  <!-- Main showcase area -->
  <rect x="50" y="50" width="500" height="300" fill="rgba(255,255,255,0.95)" rx="16" stroke="rgba(255,255,255,0.3)" stroke-width="2" filter="url(#showcaseShadow)"/>
  

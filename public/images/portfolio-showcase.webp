  <text x="300" y="85" font-family="Arial, sans-serif" font-size="20" font-weight="700" fill="#333" text-anchor="middle">Portfolio de Proyectos</text>
  
  <!-- Project grid -->
  <rect x="80" y="130" width="140" height="100" fill="rgba(0,0,0,0.05)" rx="8"/>
  <rect x="90" y="140" width="120" height="60" fill="url(#showcaseGrad)" rx="6"/>
  <text x="150" y="175" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white" text-anchor="middle">E-commerce</text>
  <text x="150" y="200" font-family="Arial, sans-serif" font-size="10" fill="#666" text-anchor="middle">Tienda Online</text>
  <text x="150" y="215" font-family="Arial, sans-serif" font-size="9" fill="#28ca42" text-anchor="middle">+250% conversión</text>
  
  <rect x="240" y="130" width="140" height="100" fill="rgba(0,0,0,0.05)" rx="8"/>
  <rect x="250" y="140" width="120" height="60" fill="url(#showcaseGrad)" rx="6"/>
  <text x="310" y="175" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white" text-anchor="middle">Portfolio</text>
  <text x="310" y="200" font-family="Arial, sans-serif" font-size="10" fill="#666" text-anchor="middle">Diseño Creativo</text>
  <text x="310" y="215" font-family="Arial, sans-serif" font-size="9" fill="#28ca42" text-anchor="middle">+180% engagement</text>
  
  <rect x="400" y="130" width="140" height="100" fill="rgba(0,0,0,0.05)" rx="8"/>
  <rect x="410" y="140" width="120" height="60" fill="url(#showcaseGrad)" rx="6"/>
  <text x="470" y="175" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="white" text-anchor="middle">Dashboard</text>
  <text x="470" y="200" font-family="Arial, sans-serif" font-size="10" fill="#666" text-anchor="middle">Panel de Control</text>
  <text x="470" y="215" font-family="Arial, sans-serif" font-size="9" fill="#28ca42" text-anchor="middle">+320% productividad</text>
  
  <!-- Bottom section -->
  <rect x="80" y="250" width="460" height="80" fill="rgba(0,0,0,0.02)" rx="8"/>
  <text x="300" y="275" font-family="Arial, sans-serif" font-size="16" font-weight="600" fill="#333" text-anchor="middle">Proyectos que Convierten</text>
  <text x="300" y="295" font-family="Arial, sans-serif" font-size="12" fill="#666" text-anchor="middle">Cada proyecto está optimizado para conversión y performance</text>
  <text x="300" y="315" font-family="Arial, sans-serif" font-size="11" fill="#28ca42" text-anchor="middle">90+ Lighthouse • Mobile-first • SEO optimizado</text>
  
  <!-- Floating elements -->
  <circle cx="30" cy="100" r="15" fill="rgba(255,255,255,0.3)"/>
  <circle cx="570" cy="150" r="12" fill="rgba(255,255,255,0.4)"/>
  <circle cx="40" cy="300" r="8" fill="rgba(255,255,255,0.5)"/>
  <circle cx="560" cy="350" r="18" fill="rgba(255,255,255,0.3)"/>

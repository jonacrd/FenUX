<svg width="500" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="statsGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00e3a2;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#9be15d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4fc3f7;stop-opacity:1" />
    </linearGradient>
    <filter id="statsShadow">
      <feDropShadow dx="0" dy="8" stdDeviation="16" flood-color="#00000040"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="rgba(255,255,255,0.95)" rx="16" stroke="rgba(0,0,0,0.1)" stroke-width="1" filter="url(#statsShadow)"/>
  
  <!-- Header -->
  <rect x="20" y="20" width="460" height="40" fill="url(#statsGrad)" rx="8"/>
  <text x="250" y="45" font-family="Arial, sans-serif" font-size="16" font-weight="700" fill="white" text-anchor="middle">Métricas de Performance</text>
  
  <!-- Stats grid -->
  <rect x="40" y="80" width="100" height="80" fill="rgba(0,0,0,0.05)" rx="8"/>
  <text x="90" y="105" font-family="Arial, sans-serif" font-size="12" font-weight="600" fill="#333" text-anchor="middle">Lighthouse</text>
  <text x="90" y="125" font-family="Arial, sans-serif" font-size="24" font-weight="800" fill="url(#statsGrad)" text-anchor="middle">94</text>
  <text x="90" y="145" font-family="Arial, sans-serif" font-size="10" fill="#28ca42" text-anchor="middle">↑ +4 vs anterior</text>
  
  <rect x="160" y="80" width="100" height="80" fill="rgba(0,0,0,0.05)" rx="8"/>
  <text x="210" y="105" font-family="Arial, sans-serif" font-size="12" font-weight="600" fill="#333" text-anchor="middle">Conversión</text>
  <text x="210" y="125" font-family="Arial, sans-serif" font-size="24" font-weight="800" fill="url(#statsGrad)" text-anchor="middle">18%</text>
  <text x="210" y="145" font-family="Arial, sans-serif" font-size="10" fill="#28ca42" text-anchor="middle">↑ +3% vs anterior</text>
  
  <rect x="280" y="80" width="100" height="80" fill="rgba(0,0,0,0.05)" rx="8"/>
  <text x="330" y="105" font-family="Arial, sans-serif" font-size="12" font-weight="600" fill="#333" text-anchor="middle">Tiempo Carga</text>
  <text x="330" y="125" font-family="Arial, sans-serif" font-size="24" font-weight="800" fill="url(#statsGrad)" text-anchor="middle">1.2s</text>
  <text x="330" y="145" font-family="Arial, sans-serif" font-size="10" fill="#28ca42" text-anchor="middle">↓ -0.8s vs anterior</text>
  
  <rect x="400" y="80" width="100" height="80" fill="rgba(0,0,0,0.05)" rx="8"/>
  <text x="450" y="105" font-family="Arial, sans-serif" font-size="12" font-weight="600" fill="#333" text-anchor="middle">SEO Score</text>
  <text x="450" y="125" font-family="Arial, sans-serif" font-size="24" font-weight="800" fill="url(#statsGrad)" text-anchor="middle">98</text>
  <text x="450" y="145" font-family="Arial, sans-serif" font-size="10" fill="#28ca42" text-anchor="middle">↑ +12 vs anterior</text>
  
  <!-- Chart area -->
  <rect x="40" y="180" width="420" height="100" fill="rgba(0,0,0,0.02)" rx="8"/>
  <text x="250" y="205" font-family="Arial, sans-serif" font-size="14" font-weight="600" fill="#333" text-anchor="middle">Tendencia de Conversión (Últimos 6 meses)</text>
  
  <!-- Simple chart line -->
  <line x1="60" y1="250" x2="80" y2="240" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="80" y1="240" x2="100" y2="230" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="100" y1="230" x2="120" y2="220" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="120" y1="220" x2="140" y2="210" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="140" y1="210" x2="160" y2="200" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="160" y1="200" x2="180" y2="190" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="180" y1="190" x2="200" y2="180" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="200" y1="180" x2="220" y2="170" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="220" y1="170" x2="240" y2="160" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="240" y1="160" x2="260" y2="150" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="260" y1="150" x2="280" y2="140" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="280" y1="140" x2="300" y2="130" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="300" y1="130" x2="320" y2="120" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="320" y1="120" x2="340" y2="110" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="340" y1="110" x2="360" y2="100" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="360" y1="100" x2="380" y2="90" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="380" y1="90" x2="400" y2="80" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="400" y1="80" x2="420" y2="70" stroke="url(#statsGrad)" stroke-width="3"/>
  <line x1="420" y1="70" x2="440" y2="60" stroke="url(#statsGrad)" stroke-width="3"/>
  
  <!-- Chart labels -->
  <text x="60" y="270" font-family="Arial, sans-serif" font-size="9" fill="#666" text-anchor="middle">Ene</text>
  <text x="150" y="270" font-family="Arial, sans-serif" font-size="9" fill="#666" text-anchor="middle">Mar</text>
  <text x="250" y="270" font-family="Arial, sans-serif" font-size="9" fill="#666" text-anchor="middle">May</text>
  <text x="350" y="270" font-family="Arial, sans-serif" font-size="9" fill="#666" text-anchor="middle">Jul</text>
  <text x="450" y="270" font-family="Arial, sans-serif" font-size="9" fill="#666" text-anchor="middle">Sep</text>
</svg>

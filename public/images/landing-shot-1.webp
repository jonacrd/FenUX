  </defs>
  
  <!-- Card background -->
  <rect width="100%" height="100%" fill="rgba(255,255,255,0.95)" rx="16" stroke="rgba(0,0,0,0.1)" stroke-width="1" filter="url(#cardShadow)"/>
  

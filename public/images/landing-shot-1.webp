  <rect x="20" y="20" width="260" height="40" fill="url(#shot1Grad)" rx="8"/>
  <text x="150" y="45" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="white" text-anchor="middle">Portfolio Moderno</text>
  
  <!-- Content -->
  <rect x="30" y="80" width="240" height="20" fill="rgba(0,0,0,0.1)" rx="4"/>
  <rect x="30" y="110" width="200" height="15" fill="rgba(0,0,0,0.08)" rx="3"/>
  <rect x="30" y="135" width="180" height="15" fill="rgba(0,0,0,0.08)" rx="3"/>
  
  <!-- Stats -->
  <rect x="30" y="160" width="80" height="25" fill="url(#shot1Grad)" rx="12"/>
  <text x="70" y="177" font-family="Arial, sans-serif" font-size="11" font-weight="bold" fill="white" text-anchor="middle">Ver Proyecto</text>
  
  <!-- Decorative elements -->
  <circle cx="250" cy="50" r="8" fill="rgba(0,0,0,0.1)"/>
  <circle cx="270" cy="50" r="6" fill="rgba(0,0,0,0.1)"/>
  <circle cx="260" cy="70" r="4" fill="rgba(0,0,0,0.1)"/>
</svg>
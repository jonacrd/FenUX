---
const { title, subtitle, badges=[], before="/images/old.webp", after="/images/new.webp", ctas=[] } = Astro.props;
---
<section class="section noise" style="position:relative">
  <div class="mesh"></div>
  <div class="grid-2">
    <header class="reveal">
      <h1 class="kick kinetic split">{title}</h1>
      <p style="opacity:.9">{subtitle}</p>
      <div class="badges">{badges.map(b=><span class="badge">{b}</span>)}</div>
      <div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:14px">
        {ctas.map(c => <a class={`btn mag ripple ${c.alt?'outline':''}`} href={c.href} {...c.attrs}>{c.label}</a>)}
      </div>
    </header>
    <div class="parallax" style="position:relative">
      <img class="hero-media" src={before} alt="before" style="filter:saturate(.6) contrast(.9) brightness(.9)"/>
      <img class="hero-media" src={after} alt="after" style="position:absolute;inset:0;clip-path:inset(0 50% 0 0);transition:clip-path .9s cubic-bezier(.22,.61,.36,1)" onmouseenter="this.style.clipPath='inset(0 0 0 0)'" onmouseleave="this.style.clipPath='inset(0 50% 0 0)'" />
    </div>
  </div>
</section>

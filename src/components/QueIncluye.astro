</section>

<script>
  // Intersection Observer para animaciones
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('visible');
        }, index * 150);
      }
    });
  }, observerOptions);

  // Observar tarjetas de características
  document.querySelectorAll('.feature-card').forEach(card => {
    card.classList.add('fade-in-up');
    observer.observe(card);
  });
</script>

<style>
  .feature-card {
    @apply relative bg-brand-mid/30 backdrop-blur-sm rounded-xl p-6 border border-brand-magenta/20 hover:border-brand-magenta/40 transition-all duration-300 hover:shadow-lg hover:shadow-brand-magenta/10 text-center;
  }

  .feature-icon {
    @apply w-16 h-16 bg-gradient-to-r from-[#C0176C] to-[#FF8A00] rounded-xl flex items-center justify-center text-white mb-4 mx-auto;
  }

  .fade-in-up {
    opacity: 0;
    transform: translateY(30px);
    transition: all 600ms ease-out;
  }

  .fade-in-up.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

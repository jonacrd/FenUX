---
const { title, items } = Astro.props;
---

<section class="section reveal">
  <h2 class="hl">{title}</h2>
  <div class="grid-3">
    {items.map(item => (
      <div class="card">
        <img src={item.src} alt={item.alt} loading="lazy" />
        <h3>{item.title}</h3>
        <p class="muted">{item.desc}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .grid-3 {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    margin-top: 32px;
  }
  
  .card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 16px;
  }
  
  .card h3 {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 8px;
  }
  
  .card p {
    font-size: 14px;
    color: #666;
  }
</style>
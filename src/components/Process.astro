---
const { title, image, steps } = Astro.props;
---

<section class="section reveal">
  <h2 class="hl">{title}</h2>
  <div class="process-container">
    <div class="process-image">
      <img src={image} alt="Proceso de trabajo" loading="lazy" />
    </div>
    <div class="process-steps">
      {steps.map(step => (
        <div class="step">
          <div class="step-number">{step.step}</div>
          <div class="step-content">
            <h3>{step.title}</h3>
            <p class="step-desc">{step.desc}</p>
            <p class="step-detail">{step.detail}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .process-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 48px;
    margin-top: 32px;
    align-items: start;
  }
  
  .process-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }
  
  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  
  .step {
    display: flex;
    gap: 16px;
    align-items: flex-start;
  }
  
  .step-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(90deg, var(--c1), var(--c2));
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 18px;
    flex-shrink: 0;
  }
  
  .step-content h3 {
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 8px 0;
  }
  
  .step-desc {
    font-size: 14px;
    color: #666;
    margin: 0 0 4px 0;
  }
  
  .step-detail {
    font-size: 12px;
    color: #888;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .process-container {
      grid-template-columns: 1fr;
      gap: 32px;
    }
  }
</style>

---
const { title, subtitle, badges=[], image="/images/webapp-hero.webp", ctas=[] } = Astro.props;
---
<section class="section noise" style="position:relative">
  <div class="mesh"></div>
  <div class="grid-2">
    <header class="reveal">
      <h1 class="kick kinetic split">{title}</h1>
      <p style="opacity:.9">{subtitle}</p>
      <div class="badges">{badges.map(b=><span class="badge">{b}</span>)}</div>
      <div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:14px">
        {ctas.map(c => <a class={`btn mag ripple ${c.alt?'outline':''}`} href={c.href} {...c.attrs}>{c.label}</a>)}
      </div>
    </header>
    <div class="parallax" data-parallax style="min-height:280px">
      <img class="hero-media" data-d="1" src={image} alt="" />
      <div class="layer card" data-d="0.8" style="left:6%;top:8%;width:44%"><div class="count" data-count="12430">0</div><small class="muted">Monthly revenue</small></div>
      <div class="layer card" data-d="0.9" style="right:6%;bottom:8%;width:46%">â†‘ <span class="count" data-count="18">0</span>%<br/><small class="muted">Conversion rate</small></div>
    </div>
  </div>
</section>

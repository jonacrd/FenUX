---
// ComoFuncionaDemo.astro - Sección "Cómo funciona" reutilizable para demos
export interface Props {
  title?: string;
  subtitle?: string;
  steps?: Array<{
    number: string;
    title: string;
    description: string;
  }>;
}

const { 
  title = "Cómo funciona nuestro sistema",
  subtitle = "Proceso simple en 4 pasos",
  steps = [
    {
      number: "01",
      title: "Solicita tu demo",
      description: "Completa el formulario y agenda una demostración personalizada sin compromiso."
    },
    {
      number: "02", 
      title: "Configuración express",
      description: "Configuramos tu sistema con tus datos reales en menos de 24 horas."
    },
    {
      number: "03",
      title: "Prueba gratuita",
      description: "Prueba el sistema durante 7 días completos con datos reales de tu negocio."
    },
    {
      number: "04",
      title: "Implementación final",
      description: "Si te convence, implementamos la versión completa y te acompañamos."
    }
  ]
} = Astro.props;
---

<section class="py-20 bg-brand-dark" id="como-funciona">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="font-bold text-4xl md:text-5xl text-white mb-6">
        {title}
      </h2>
      <p class="text-xl text-neutral-200/90 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Grid de pasos -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 relative">
      {steps.map((step, index) => (
        <div 
          class="relative text-center group"
          style={`animation-delay: ${index * 0.2}s`}
        >
          <!-- Número del paso -->
          <div class="relative z-10 mx-auto w-20 h-20 rounded-full bg-gradient-to-r from-[#C0176C] to-[#FF8A00] flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
            <span class="text-2xl font-bold text-white">
              {step.number}
            </span>
          </div>
          
          <!-- Contenido -->
          <div class="relative z-10">
            <h3 class="text-xl font-semibold text-white mb-4 group-hover:text-[#FF8A00] transition-colors duration-300">
              {step.title}
            </h3>
            <p class="text-neutral-200/80 leading-relaxed">
              {step.description}
            </p>
          </div>
          
          <!-- Línea conectora (solo en desktop) -->
          {index < steps.length - 1 && (
            <div class="hidden lg:block absolute top-10 left-1/2 w-full h-0.5 bg-gradient-to-r from-[#C0176C] via-[#D2137D] to-[#FF8A00] transform translate-x-1/2 z-0"></div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Animación de entrada */
  .group {
    opacity: 0;
    transform: translateY(30px);
    animation: slideInUp 0.6s ease-out forwards;
  }
  
  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

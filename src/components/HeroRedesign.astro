---
const { title, subtitle, badges=[], before="/images/placeholder.svg", after="/images/placeholder.svg", ctas=[] } = Astro.props;
---
<section class="section reveal">
  <div class="grid-2">
    <div>
      <h1 class="grad hl">{title}</h1>
      <p style="opacity:.9">{subtitle}</p>
      <div class="badges">{badges.map(b=><span class="badge">{b}</span>)}</div>
      <div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:14px">
        {ctas.map(c => <a class={`btn ${c.alt?'outline':''}`} href={c.href} {...c.attrs}>{c.label}</a>)}
      </div>
    </div>
    <div class="parallax" style="position:relative">
      <img src={before} alt="before" style="width:100%;border-radius:var(--radius);filter:saturate(.5) blur(.2px);" />
      <img src={after} alt="after" style="position:absolute;inset:0;border-radius:var(--radius);clip-path:inset(0 50% 0 0);transition:clip-path .8s cubic-bezier(.22,.61,.36,1)" onmouseenter="this.style.clipPath='inset(0 0 0 0)'" onmouseleave="this.style.clipPath='inset(0 50% 0 0)'" />
    </div>
  </div>
</section>

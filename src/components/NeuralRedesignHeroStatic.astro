---
export interface Props {
  title: string;
  subtitle: string;
  badges: string[];
  ctas: { href: string; label: string; alt?: boolean; attrs?: any }[];
}

const { title, subtitle, badges = [], ctas = [] } = Astro.props;
---

<section 
  class="relative h-screen w-screen overflow-hidden"
  style="
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  "
>
  <!-- Animated Wave Background -->
  <div class="absolute inset-0">
    <!-- Wave 1 -->
    <div 
      class="absolute inset-0 opacity-40"
      style="
        background: 
          radial-gradient(ellipse 80% 50% at 20% 20%, rgba(255, 119, 198, 0.4) 0%, transparent 50%),
          radial-gradient(ellipse 60% 40% at 80% 80%, rgba(120, 219, 255, 0.3) 0%, transparent 50%),
          radial-gradient(ellipse 70% 60% at 50% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 60%);
        animation: waveFloat1 12s ease-in-out infinite;
      "
    />
    
    <!-- Wave 2 -->
    <div 
      class="absolute inset-0 opacity-30"
      style="
        background: 
          radial-gradient(ellipse 60% 70% at 70% 30%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
          radial-gradient(ellipse 80% 50% at 30% 70%, rgba(255, 119, 198, 0.2) 0%, transparent 50%);
        animation: waveFloat2 15s ease-in-out infinite reverse;
      "
    />
    
    <!-- Wave 3 -->
    <div 
      class="absolute inset-0 opacity-20"
      style="
        background: 
          radial-gradient(ellipse 90% 60% at 50% 20%, rgba(120, 219, 255, 0.2) 0%, transparent 60%),
          radial-gradient(ellipse 50% 80% at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        animation: waveFloat3 18s ease-in-out infinite;
      "
    />
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
    <!-- Badge -->
    <div 
      class="inline-flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 backdrop-blur-sm mb-8"
      style="animation: fadeInUp 1s ease-out;"
    >
      <span class="text-xs font-light uppercase tracking-wider text-white/80">Nuevo</span>
      <span class="h-1 w-1 rounded-full bg-white/60"></span>
      <span class="text-sm font-light tracking-tight text-white/90">
        {badges[0] || "Web Redesign"}
      </span>
    </div>

    <!-- Title -->
    <h1 
      class="text-5xl sm:text-6xl md:text-7xl font-extralight leading-tight tracking-tight text-white mb-6"
      style="
        text-shadow: 0 4px 20px rgba(0,0,0,0.3);
        animation: fadeInUp 1s ease-out 0.2s both;
      "
    >
      {title}
    </h1>

    <!-- Subtitle -->
    <p 
      class="text-lg sm:text-xl font-light leading-relaxed tracking-tight text-white/90 mb-8 max-w-2xl mx-auto"
      style="
        text-shadow: 0 2px 10px rgba(0,0,0,0.2);
        animation: fadeInUp 1s ease-out 0.4s both;
      "
    >
      {subtitle}
    </p>

    <!-- CTAs -->
    <div 
      class="flex flex-wrap items-center justify-center gap-4"
      style="animation: fadeInUp 1s ease-out 0.6s both;"
    >
      {ctas.map((cta, i) => (
        <a
          key={i}
          href={cta.href}
          class={`
            rounded-2xl border px-6 py-3 text-sm font-light tracking-tight transition-all duration-300
            ${cta.alt 
              ? 'border-white/30 text-white/90 hover:bg-white/10 hover:border-white/50' 
              : 'bg-white/20 text-white border-white/30 hover:bg-white/30 hover:border-white/50'
            }
          `}
          style="
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
          "
          {...cta.attrs}
        >
          {cta.label}
        </a>
      ))}
    </div>

    <!-- Micro details -->
    <div 
      class="mt-12 flex flex-wrap justify-center gap-8 text-sm font-extralight tracking-tight text-white/70"
      style="animation: fadeInUp 1s ease-out 0.8s both;"
    >
      <div class="flex items-center gap-2">
        <span class="h-1 w-1 rounded-full bg-white/50"></span>
        Modern Design
      </div>
      <div class="flex items-center gap-2">
        <span class="h-1 w-1 rounded-full bg-white/50"></span>
        Mobile First
      </div>
      <div class="flex items-center gap-2">
        <span class="h-1 w-1 rounded-full bg-white/50"></span>
        Performance Optimized
      </div>
    </div>
  </div>

  <!-- Bottom gradient -->
  <div class="absolute inset-x-0 bottom-0 h-24 bg-gradient-to-t from-black/20 to-transparent"></div>
</section>

<style>
  @keyframes waveFloat1 {
    0%, 100% { 
      transform: translateX(0px) translateY(0px) scale(1) rotate(0deg); 
      opacity: 0.4;
    }
    33% { 
      transform: translateX(20px) translateY(-15px) scale(1.1) rotate(120deg); 
      opacity: 0.6;
    }
    66% { 
      transform: translateX(-15px) translateY(10px) scale(0.9) rotate(240deg); 
      opacity: 0.3;
    }
  }
  
  @keyframes waveFloat2 {
    0%, 100% { 
      transform: translateX(0px) translateY(0px) scale(1) rotate(0deg); 
      opacity: 0.3;
    }
    50% { 
      transform: translateX(-25px) translateY(20px) scale(1.2) rotate(180deg); 
      opacity: 0.5;
    }
  }
  
  @keyframes waveFloat3 {
    0%, 100% { 
      transform: translateX(0px) translateY(0px) scale(1) rotate(0deg); 
      opacity: 0.2;
    }
    25% { 
      transform: translateX(30px) translateY(-10px) scale(1.3) rotate(90deg); 
      opacity: 0.4;
    }
    75% { 
      transform: translateX(-20px) translateY(15px) scale(0.8) rotate(270deg); 
      opacity: 0.3;
    }
  }
  
  @keyframes fadeInUp {
    from { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
</style>

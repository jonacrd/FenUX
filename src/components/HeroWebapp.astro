---
const { title, subtitle, badges=[], image="/images/placeholder.svg", ctas=[] } = Astro.props;
---
<section class="section reveal">
  <div class="grid-2">
    <div>
      <h1 class="grad hl">{title}</h1>
      <p style="opacity:.9">{subtitle}</p>
      <div class="badges">{badges.map(b=><span class="badge">{b}</span>)}</div>
      <div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:14px">
        {ctas.map(c => <a class={`btn ${c.alt?'outline':''}`} href={c.href} {...c.attrs}>{c.label}</a>)}
      </div>
    </div>
    <div class="parallax" data-parallax style="min-height:280px;position:relative">
      <span class="orb a" style="left:-8%;top:-12%"></span>
      <span class="orb b" style="right:-12%;bottom:-18%"></span>
      <img data-d="1" src={image} alt="" style="position:absolute;inset:0;margin:auto;max-width:92%;border-radius:var(--radius)" />
      <div data-d="0.7" class="card" style="position:absolute;left:6%;top:10%;width:42%;">$12,430<br/><small class="muted">Monthly revenue</small></div>
      <div data-d="0.9" class="card" style="position:absolute;right:6%;bottom:8%;width:46%;">â†‘ 18%<br/><small class="muted">Conversion rate</small></div>
    </div>
  </div>
</section>

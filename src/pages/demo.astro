---

<Base 
  title={meta.title}
  description={meta.description}
  canonical={meta.canonical}
  ogImage={meta.ogImage}
  currentPage="demo"
  showHomeLink={true}
>
  <!-- Hero con mini-formulario -->
  <HeroCaptaclientes />

  <!-- Qué incluye -->
  <QueIncluye />

  <!-- Cómo funciona -->
  <ComoFunciona />

  <!-- Planes y precios -->

  title: DEMO_CONFIG.title,
  description: DEMO_CONFIG.description,
  canonical: "https://tudominio.com/demo", // Reemplazar con tu dominio
  ogImage: "/images/og-demo.jpg" // Reemplazar con tu imagen OG
